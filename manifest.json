{
  "manifest_version": 3,
  "name": "CannerAI Assistant",
  "version": "1.0",
  "description": "AI-Powered LinkedIn Assistant connected to local Flask backend",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*", 
    "https://*.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html" 
  }
}