# OAuth Configuration
# Get these from Google Cloud Console (https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Get these from GitHub Settings > Developer settings > OAuth Apps
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Flask Configuration
# Generate a secure secret key for session management
SECRET_KEY=your_secret_key_change_in_production

# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:3000

# CORS Configuration
# Add your browser extension ID and any frontend URLs
# Get extension ID from chrome://extensions/ (enable Developer mode)
CORS_ALLOWED_ORIGINS=http://localhost:3000,chrome-extension://your_extension_id_here

# Database Configuration (optional)
# Default: SQLite database file
# For PostgreSQL: postgresql://user:password@localhost/dbname
DATABASE_URL=sqlite:///responses.db
